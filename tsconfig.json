{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@index": [
        "./index.d.ts"
      ],
      "@api/*": [
        "./src/app/api/*"
      ],
      "@psmc/*": [
        "src/app/protected/psmc/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@/*": [
        "./*"
      ],
      "react": [
        "./node_modules/@types/react"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/components/LoadMorePosts.tsx",
    "src/app/blog-3/page.tsx",
    "src/app/components/ErrorBoundry.jsx",
    "src/app/components/ErrorBoundary.tsx",
    "src/app/global-error.tsx",
    "../index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
